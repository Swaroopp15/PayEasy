doctype html
html(lang="en")
  head
    title PayEasy - Authentication Options
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="Choose your preferred authentication method to proceed with your transaction.")
    script(src='https://cdn.tailwindcss.com')
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap", rel="stylesheet")
    style.
      body {
        font-family: 'Inter', sans-serif;
      }

  body(class='bg-gray-100 flex items-center justify-center min-h-screen p-4')
    div(class='bg-white p-8 rounded-lg shadow-lg text-center w-full max-w-md')
      h1(class='text-2xl font-bold text-blue-700 mb-6') Select Authentication Method
      form(action='/authenticate' method='POST' class='space-y-6')
        input(type='hidden' name='email' value=email)
        input(type='hidden' name='transaction_id' value=transaction_id)

        button(type='submit' name='method' value='pin' class='w-full bg-blue-600 text-white font-semibold py-3 rounded-lg hover:bg-blue-700 transition duration-300') Use PIN
        button(type='submit' name='method' value='otp' class='w-full bg-green-600 text-white font-semibold py-3 rounded-lg hover:bg-green-700 transition duration-300') Use OTP

      if error
        div(class='mt-4 p-3 bg-red-50 border border-red-200 text-red-600 rounded-lg text-sm text-center')
          p= error