doctype html
html(lang="en")
  head
    title PayEasy - Login
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="Login to your PayEasy account to manage your secure payment gateway.")
    script(src='https://cdn.tailwindcss.com')
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap", rel="stylesheet")
    style.
      body {
        font-family: 'Inter', sans-serif;
      }

  body(class='bg-gray-100 flex items-center justify-center min-h-screen p-4')
    div(class='bg-white p-8 rounded-lg shadow-lg w-full max-w-md')
      h1(class='text-2xl font-bold text-blue-700 mb-6 text-center') Login to Your Account
      form(action='/login' method='POST' class='space-y-6')
        div
          label(for='email' class='block text-gray-700 font-medium mb-2') Email:
          input(type='email' name='email' required class='w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-400')

        div
          label(for='passkey' class='block text-gray-700 font-medium mb-2') Passkey:
          input(type='password' name='passkey' required class='w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-400')

        button(type='submit' class='w-full bg-blue-600 text-white font-semibold py-3 rounded-lg hover:bg-blue-700 transition duration-300') Login

      div(class='mt-6 text-center')
        a(href="/register" class='text-blue-600 hover:text-blue-800 transition duration-300') Don't have an account? Register here.

      if error
        div(class='mt-4 p-3 bg-red-50 border border-red-200 text-red-600 rounded-lg text-sm')
          p= error