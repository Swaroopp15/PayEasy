doctype html
html(lang="en")
  head
    title PayEasy - Make Payment
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="Securely send payments using PayEasy's fast and reliable payment gateway.")
    script(src='https://cdn.tailwindcss.com')
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap", rel="stylesheet")
    style.
      body {
        font-family: 'Inter', sans-serif;
      }

  body(class='bg-gray-100 flex items-center justify-center min-h-screen p-4')
    div(class='bg-white p-8 rounded-lg shadow-lg w-full max-w-md')
      h1(class='text-2xl font-bold text-purple-700 mb-6 text-center') Make a Payment
      form(action='/init' method='POST' class='space-y-6')
        div
          label(for='receiver_email' class='block text-gray-700 font-medium mb-2') Receiver's Email:
          input(type='email' name='reciptentEmail' required class='w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent placeholder-gray-400')

        div
          label(for='amount' class='block text-gray-700 font-medium mb-2') Enter Amount:
          input(type='number' name='amount' required class='w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent placeholder-gray-400')

        button(type='submit' class='w-full bg-purple-600 text-white font-semibold py-3 rounded-lg hover:bg-purple-700 transition duration-300') Send Payment

      if error
        div(class='mt-4 p-3 bg-red-50 border border-red-200 text-red-600 rounded-lg text-sm text-center')
          p= error