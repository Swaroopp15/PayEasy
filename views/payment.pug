doctype html
html
  head
    title Payment Gateway
    script(src='https://cdn.tailwindcss.com')
  body(class='bg-gray-100 flex items-center justify-center h-screen')
    div(class='bg-white p-6 rounded-lg shadow-lg')
      h1(class='text-xl font-bold mb-4') Welcome to The Chodavaram Bank
      form(action='/validate-user', method='POST', class='space-y-4')
        label(for='email', class='block text-gray-700') Enter Email:
        input(type='email', name='email', required, class='border rounded p-2 w-full')
        button(type='submit', class='bg-blue-500 text-white p-2 rounded w-full') Proceed
      if error
        p(class='text-red-500 mt-2')= error
