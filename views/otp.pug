doctype html
html(lang="en")
  head
    title PayEasy - OTP Verification
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="Verify your identity with the OTP sent to your email.")
    script(src='https://cdn.tailwindcss.com')
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap", rel="stylesheet")
    style.
      body {
        font-family: 'Inter', sans-serif;
      }

  body(class='bg-gray-100 flex items-center justify-center min-h-screen p-4')
    div(class='bg-white p-8 rounded-lg shadow-lg w-full max-w-md')
      h1(class='text-2xl font-bold text-blue-700 mb-6 text-center') OTP Verification
      p(class='text-gray-600 text-center mb-6') Enter the OTP sent to your email to verify your identity.

      form(action='/verify-auth' method='POST' class='space-y-6')
        div
          input(type='text' name='authInput' required placeholder='Enter OTP' class='w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-400')
          input(type='hidden' name='method' value='otp')
          input(type='hidden' name='transaction_id' value=transaction_id)

        button(type='submit' class='w-full bg-blue-600 text-white font-semibold py-3 rounded-lg hover:bg-blue-700 transition duration-300') Verify OTP

      if error
        div(class='mt-4 p-3 bg-red-50 border border-red-200 text-red-600 rounded-lg text-sm text-center')
          p= error